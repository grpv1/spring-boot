<settings xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/settings-1.0.0.xsd">
<pluginGroups>
  </pluginGroups>
          
  <proxies>
  </proxies>
          
 <servers>
    <server>
      <id>github-maven</id>
      <!--username>${env.github_repository_owner}</username-->
      <username>${env.maven_access_user}</username>
      <password>${env.maven_access_token}</password>
    </server>
    <server>
      <id>github-grpv1-maven</id>
      <username>${env.maven_access_user}</username>
      <password>${env.maven_access_token}</password>
    </server>
    <server>
      <id>github</id>
      <!-- for scm operations by release plugin -->
      <password>${env.maven_access_token}</password>  
    </server>
  </servers>

  <mirrors>
  </mirrors>

  <profiles>
    <profile>
      <id>github</id>
      <repositories>
        <repository>
          
          <id>github-grpv1-maven</id>
          <!-->must use group ID of github group<-->  
          <!-- you will need to specify username password for this in servers section-->
          <url>https://maven.pkg.github.com/grpv1/*</url>
          <layout>default</layout>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>daily</updatePolicy>
            <checksumPolicy>fail</checksumPolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
            <checksumPolicy>fail</checksumPolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>gitlab-grpv1-maven</id> 
          <name>grpv1-maven-plugins</name>
          <url>https://maven.pkg.github.com/grpv1/*</url>
          <layout>default</layout>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>daily</updatePolicy>
            <checksumPolicy>fail</checksumPolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
            <checksumPolicy>fail</checksumPolicy>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
      <activeProfile>github</activeProfile>
  </activeProfiles>

</settings>
